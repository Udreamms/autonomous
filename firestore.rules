rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Global access for authenticated users (common in development)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Specific collection rules
    match /kanban-groups/{groupId} {
      allow read, write: if true;
    }

    match /cards/{cardId} {
      allow read, write: if true;
    }

    match /chatbots/{chatbotId} {
      allow read, write: if true;
      
      match /pages/{pageId} {
        allow read, write: if true;
      }
    }

    // Web projects: allow read for anyone to enable public previews
    match /web-projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // CRM Contacts
    match /contacts/{contactId} {
      allow read, write: if request.auth != null;
    }
    
    // Catch-all (Opcional, pero recomendado para desarrollo)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
