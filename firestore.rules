rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to manage Kanban groups
    match /kanban-groups/{groupId} {
      allow read, create, update, delete: if request.auth != null;

      // Allow authenticated users to manage cards within a group
      match /cards/{cardId} {
        allow read, create, update, delete: if request.auth != null;
      }
    }

    // This rule allows the search functionality to work.
    // It lets any authenticated user read from the 'cards' collection group.
    match /{path=**}/cards/{cardId} {
      allow read: if request.auth != null;
    }

    // Allows any authenticated user to create, read, update, and delete chatbots.
    match /chatbots/{botId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // New rule for contacts collection
    match /contacts/{contactId} {
      allow read, write: if request.auth != null;
    }
  }
}
