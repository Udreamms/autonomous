rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Media del Chatbot (Público para WhatsApp)
    match /chatbot_media/{allPaths=**} {
       allow read: if true;
       allow write: if request.auth != null;
    }

    // Imágenes de Perfil (Propiedades Extra)
    match /profile-data/{allPaths=**} {
       allow read, write: if request.auth != null;
    }

    // Uploads de usuario privados
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
