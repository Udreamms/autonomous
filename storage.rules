rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regla para archivos del Chatbot
    match /chatbot_media/{allPaths=**} {
       allow read: if true; // PÃºblico para que WhatsApp pueda descargarlo
       allow write: if request.auth != null; // Solo admins/usuarios logueados suben
    }

    // Regla existente para uploads de usuario (mantenemos por compatibilidad)
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
